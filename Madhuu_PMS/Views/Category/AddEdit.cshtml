@model Madhuu_PMS.Model.Entity.Category

@if (Model.Id > 0)
{
    <h1>Edit Category Info</h1>
}
else
{
    <h2>Create Category Info</h2>
}

<form method="post" asp-action="AddEdit">
    <input asp-for="Id" type="hidden" />

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" required />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" required />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label asp-for="IsActive" class="form-check-label">Is Active</label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
        <div class="col text-end">
            <button type="submit" class="btn btn-primary">@((Model.Id > 0) ? "Update" : "Create")</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
